<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/movie/delete/{{movie.id}}">
            <fieldset>
                <legend>Delete Movie.</legend>
                <div class="form-group"><label class="col-sm-4 control-label" for="movieTitle">Movie Title</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="movieTitle"
                                                  placeholder="Article Title" value="{{movie.title}}" name="title" disabled>
                    </div>
                </div>
                <div class="form-group"><label class="col-sm-4 control-label" for="movieContent">Content</label>
                    <div class="col-sm-6"><textarea class="form-control" id="movieContent" rows="5" name="content"
                                                    disabled>{{movie.content}}</textarea></div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="movieContent">Category</label>
                    <div class="col-sm-6">
                        <select name="category" class="form-control" id="select" disabled>
                            <option value="{{movie.category.id}}">{{movie.category.name}}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="movie_tags">Tags</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="movie_tags" name="tags" value="{{ movie.tagNames }}" disabled></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4"><a href="/" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>