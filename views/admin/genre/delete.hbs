<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/admin/genre/delete/{{genre.id}}" method="POST">
            <fieldset>
                <legend>Delete Genre</legend>
                <div class="form-group"><label class="col-sm-4 control-label" for="name">Genre Name</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="name" placeholder="Genre Name"
                                                  name="name" value="{{ genre.name }}" disabled></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="/admin/genre/all">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>