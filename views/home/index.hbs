<!-- Side menu and Content-->
<div class="container">

    <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
        <!-- sidebar -->
        {{> categoriesMenu}}
        <!-- end of sidebar -->
    </div>
    <!-- end of sidebar -->
    <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
        <div class="post">
            <div id="carousel-example-generic" class="carousel slide">
                <!-- Indicators -->
                <ol class="carousel-indicators hidden-xs">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    {{#each sliderButtons}}
                        <li data-target="#carousel-example-generic" data-slide-to="{{this}}"></li>
                    {{/each}}
                </ol>

                <!-- Wrapper for slides -->
                <div class="post-inner">
                    <div class="carousel-inner">
                        <div class="item active">
                            <div class="col-md-4 col-lg-3 img-holder poster-holder-container ">
                                <a href="/movie/details/{{this.id}}"><img class="post-Image-link poster-image" src="{{firstMovie.poster_url}}" alt="" /></a>
                            </div>
                            <div class="col-md-8 col-lg-9 trailer-holder-container">
                                <iframe class="trailer-holder"
                                        width="100%"
                                        height="315"
                                        src="https://www.youtube.com/embed/{{firstOrRandom firstMovie.youtube_trailers ../site.config.globalOptions.showRandomTrailer}}"
                                        frameborder="0"
                                        allowfullscreen>
                                </iframe>
                            </div>
                        </div>
                        {{#each sliderMovies}}
                            <div class="item">
                                <div class="col-md-4 col-lg-3 img-holder poster-holder-container ">
                                    <a href="/movie/details/{{this.id}}"><img class="post-Image-link poster-image" src="{{this.poster_url}}" alt="" /></a>                            </div>
                                <div class="col-md-8 col-lg-9 trailer-holder-container">
                                    <iframe class="trailer-holder"
                                            width="100%"
                                            height="315"
                                            src="https://www.youtube.com/embed/{{firstOrRandom this.youtube_trailers ../site.config.globalOptions.showRandomTrailer}}"
                                            frameborder="0"
                                            allowfullscreen>
                                    </iframe>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="icon-next"></span>
                </a>


            </div>
        </div>
        <div class="text-center">

            <!-- end of content -->

            <h2 class="brand-before">
                <small>Welcome to word of the films</small>
            </h2>
            <h1 class="brand-name"></h1>
            <hr class="tagline-divider">
            <h2>
                <small>Created by our team
                    <strong>BEMP TV</strong>
                </small>
            </h2>
        </div>

    </div>
    <!-- /.container -->
</div>