<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/userPanel/delete/comment/{{comment.id}}" method="post">
            <fieldset>
                <legend>Delete Comment</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="content">Your Comment:</label>
                    <div class="col-sm-4 ">
                        <textarea type="text" rows="5" class="form-control" id="content" placeholder="{{comment.content}}" name="content" disabled></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="/userPanel/comments">Cancel</a>
                        <button type="submit" class="btn btn-success">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>